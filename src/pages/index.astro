---
import BaseHead from '../components/BaseHead.astro';
import { Quiz } from '../components/quiz/Quiz';
import '../styles/global.css';

const title = "Descubre tu Signo Financiero";
const description = "Responde 12 preguntas y descubre qué tipo de personalidad financiera tienes";
---

<!doctype html>
<html lang="es">
	<head>
		<BaseHead title={title} description={description} />
	</head>
	<body class="bg-background">
		<main class="min-h-screen">
			<!-- Hero Section -->
			<div class="border-b bg-white/50 backdrop-blur-sm">
				<div class="max-w-7xl mx-auto px-8 py-3">
					<div class="flex flex-col md:flex-row md:items-center md:justify-between gap-8">
						<!-- Left: Title -->
						<div class="flex-1">
							<h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-3 text-[#6F737F]">
								¿Cuál es tu<br />
								<span style="color: #6F737F;">Signo Financiero?</span>
							</h1>
							<p class="text-lg text-muted-foreground max-w-xl">
								Descubre tu personalidad financiera respondiendo 12 preguntas
							</p>
						</div>

						<!-- Right: Instructions -->
						<div class="flex-shrink-0 bg-background rounded-xl p-6 border border-border max-w-md">
							<h3 class="font-semibold text-foreground mb-3">
								Instrucciones
							</h3>
							<ul class="space-y-2 text-sm text-muted-foreground">
								<li class="flex items-start gap-2">
									<span class="mt-0.5">1.</span>
									<span>Responde todas las preguntas con honestidad</span>
								</li>
								<li class="flex items-start gap-2">
									<span class="mt-0.5">2.</span>
									<span>No hay respuestas correctas o incorrectas</span>
								</li>
								<li class="flex items-start gap-2">
									<span class="mt-0.5">3.</span>
									<span>Al finalizar, obtendrás tu perfil y recomendaciones</span>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</div>

			<Quiz client:load />
		</main>
	</body>
</html>
